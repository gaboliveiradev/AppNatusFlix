<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNatusFlix.Filmes.Uncharted">

    <Grid Style="{ StaticResource Body }" RowDefinitions="*, *, *, *, *" ColumnDefinitions="*, *">
        <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Image x:Name="logoNatusFlix" Style="{ StaticResource ImageLogo }" />
        </StackLayout>

        <WebView Background="#111" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" x:Name="visualizador" VerticalOptions="FillAndExpand" />

    </Grid>
</ContentPage>